@page
@model H3AuctionHouse.Pages.AddItemModel
@{
    ViewData["Title"] = "Add Item";
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <form method="post">
            <h2>Add an item to auction</h2>
            <hr>
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="@Model.ProductName"></label>
                @*Value will be binded to our ProductName property*@
                <input asp-for="@Model.ProductName">
            </div>
            <div>
                <label asp-for="@Model.Description"></label>
                @*Value will be binded to our Description property*@
                <input asp-for="@Model.Description">
            </div>
            <div>
                @*Value will be binded to our ExipireDate Datetime property*@
                <input class="form-control" asp-for="ExpireDate" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                @*Creates a new select tag for every value Model.Categorys has*@
                @*Value will be binded to our SelectedCategory property*@
                <select asp-for="SelectedCategory" asp-items="Model.Categorys">
                </select>
            </div>
            <div>
                <button type="submit">Create Item</button>
            </div>
        </form>
        @*Displays our ErrorMessage*@
        <p>@Model.ErrorMessage</p>
    </div>
}
